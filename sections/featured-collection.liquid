<section class="py-12 w-full">
  <div class="w-full grid grid-cols-1 gap-4 sm:grid-cols-3 sm:gap-2">
    {%- if section.settings.featured_collection != blank -%}
      {%- for collection in section.settings.featured_collection -%}
        {%- assign image = collection.featured_image -%}
        {%- assign title = collection.title -%}
        {%- assign link = collection.url -%}
        {% render 'collection-card', image: image, title: title, link: link %}
      {%- endfor -%}
    {%- else -%}
      {%- for item in (1..3) -%}
        {% render 'collection-card', image: '', title: '', link: '' %}
      {%- endfor -%}
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Featured collections",
  "class": "featured_collections",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "tag": "section",
  "settings": [
    {
      "type": "header",
      "content": "Select collection"
    },
    {
      "type": "collection_list",
      "limit": 3,
      "id": "featured_collection",
      "label": "Select up to 3"
    }
  ],
  "presets": [
    {
      "name": "Featured collection",
      "settings": {},
      "blocks": []
    }
  ]
}
{% endschema %}
